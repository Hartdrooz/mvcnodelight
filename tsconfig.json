{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"lib": ["es6"],
		"types": ["reflect-metadata"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"]
}
